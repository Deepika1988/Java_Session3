package session3;
//class which performs basic calculator operations
public class Assignment4 {

	public int addition(int a, int b)
	{
		int value = a+b;
		return value;
	}
	
	public int subtraction(int a, int b)
	{
		int value = a-b;
		return value;
	}
	
	public int multiplication(int a, int b)
	{
		int value = a*b;
		return value;
	}
	
	public int division(int a, int b)
	{
		int value = a/b;
		return value;
	}
	public static void main(String[] args) {
		Assignment4 a4 = new Assignment4();
		System.out.println("The sum of 3 and 4 is "+a4.addition(3,4));
		System.out.println("The difference of 10 and 5 is "+a4.subtraction(10,5));
		System.out.println("The multiplication of 3 and 2 is "+a4.multiplication(3, 2));
		System.out.println("The division of 8 and 2 is "+a4.division(8, 2));
	}

}
